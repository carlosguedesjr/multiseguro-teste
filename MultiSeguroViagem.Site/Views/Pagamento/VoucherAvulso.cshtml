@section Scripts
{
    <script src="/www/js/vendor/moment-with-locales.min.js"></script>
    <script src="/www/js/vendor/scrollreveal.min.js"></script>

    <script>
        window.sr = ScrollReveal({ mobile: false });
        sr.reveal('.card', 50);
        sr.reveal('.recomendacoes-voucher .title');
        sr.reveal('.recomendacoes-voucher p');
        sr.reveal('.recomendacoes-voucher li');

        var tipoPagamento = obtemParametroUri('T') ? obtemParametroUri('T') : 'C';
        var pagamentoConcluido = obtemParametroUri('C') ? true : false;

        $('#spViajante').text(obtemParametroUri('Nome'));


        if (tipoPagamento == 'C')
            $('.cartao').removeClass('hidden');
        else {
            $('.boleto').removeClass('hidden');

            if (!pagamentoConcluido)
                $('.btn-boleto').removeClass('hidden');
        }

        $('#itauCripto').val('@(TempData["CriptoItau"])');

        $('.btn-boleto').on("click", function () { $('#frmItau').submit(); });        
    </script>
    <script async>
        conversaoRDStation("Voucher Avulso");
        removeSession('emailPagamento');
    </script>
}