        <div class="col-md-offset-2 col-md-4">
          <div class="card card-nav-tabs">
            <div class="header header-info">
              <h5 style="margin: 0;">Internet Explorer</h5>
            </div>
            <div class="content">
              <p>O conteúdo deste site utiliza uma tecnologia avançada, não compatível com o Internet Explorer.</p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card card-nav-tabs">
            <div class="header header-danger">
              <h5 style="margin: 0;">JavaScript</h5>
            </div>
            <div class="content">
              <p>O JavaScript do seu navegador está desabilitado! Habilite para acessar o site.</p>
            </div>
          </div>
        </div>

        <div class="col-md-offset-3 col-md-6">

          <h3>Solicite sua cotação</h3>

          @using (Html.BeginForm("Contato", "Home", FormMethod.Post, new { Id = "frmNoScript" }))
          {
            @Html.HiddenFor(x => x.Mensagem, new { Value = "Lead" })

            <div class="form-group label-floating has-error">
              <label class="control-label">
                @Html.ValidationMessageFor(x => x.Nome, null, new { Class = "control-label" })
              </label>

              @Html.TextBoxFor(x => x.Nome, new { Placeholder = "Nome", Class = "form-control", Autocomplete = "off", Valida = "campoVazio nomeCompleto", Data_message_Empty = "Informe o nome" })
            </div>

            <div class="form-group label-floating has-error">
              <label class="control-label">
                @Html.ValidationMessageFor(x => x.Email, null, new { Class = "control-label" })
              </label>

              @Html.TextBoxFor(x => x.Email, new { Placeholder = "Email", Class = "form-control", Autocomplete = "off", Valida = "campoVazio email", Data_message_Empty = "Informe o e-mail" })
            </div>

            <div class="form-group label-floating has-error">
              <label class="control-label">
                @Html.ValidationMessageFor(x => x.Telefone, null, new { Class = "control-label" })
              </label>

              @Html.TextBoxFor(x => x.Telefone, new { Placeholder = "Telefone/WhatsApp", Class = "form-control", Autocomplete = "off", Valida = "campoVazio", Data_message_Empty = "Informe o telefone", Mask_Telefone = "true" })
            </div>

                        <button type="submit" class="btn btn-primary btn-block margin-top-5-percent">Enviar!</button>
          }
        </div>
      </div>
    </div>
  </div>

  <script src="/www/js/vendor/jquery.min.js"></script>
  <script src="/www/js/vendor/jquery.unobtrusive-ajax.min.js"></script>
  <script src="/www/js/vendor/jquery.mask.min.js"></script>
  <script src="/www/js/vendor/sweetalert2.min.js"></script>

  <script src="/www/js/modulos/common.js"></script>
  <script src="/www/js/modulos/validacoes.js"></script>

  <script>
    if (typeof jQuery !== "undefined") {
        var sucesso = '@(ViewBag.Sucesso)';
        if (sucesso) {
            swal('Sucesso', sucesso, 'success');
        }

        var erro = '@(ViewBag.Erro)';
        if (erro) {
            swal('Oops', erro, 'error');
        }

        $(frmNoScript).on('submit', function (evt) {
            if (!validaFormulario("#frmNoScript"))
                evt.preventDefault();
        });
    }
  </script>

</body>
